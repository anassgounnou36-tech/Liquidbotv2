# ==============================================
# RPC & NETWORK CONFIGURATION
# ==============================================
# Base network RPC URL
RPC_URL_BASE=https://mainnet.base.org

# Chain ID (8453 for Base)
CHAIN_ID=8453

# ==============================================
# AAVE V3 CONTRACT ADDRESSES (BASE)
# ==============================================
# Aave v3 Pool Address Provider on Base
AAVE_POOL_ADDRESS_PROVIDER=0xe20fCBdBfFC4Dd138cE8b2E6FBb6CB49777ad64D

# Aave v3 Pool Address on Base
AAVE_POOL_ADDRESS=0xA238Dd80C259a72e81d7e4664a9801593F98d1c5

# Aave v3 Oracle Address on Base
AAVE_ORACLE_ADDRESS=0x2Cc0Fc26eD4563A5ce5e8bdcfe1A2878676Ae156

# ==============================================
# HEALTH FACTOR THRESHOLDS (HOT-RELOADABLE)
# ==============================================
# Health Factor threshold to enter WATCH state
HF_WATCH=1.10

# Health Factor threshold to enter CRITICAL state
HF_CRITICAL=1.04

# Health Factor threshold to enter LIQUIDATABLE state
HF_LIQUIDATABLE=1.000

# ==============================================
# EXECUTION PARAMETERS (HOT-RELOADABLE)
# ==============================================
# Minimum expected profit in USD to execute liquidation
MIN_PROFIT_USD=50

# Maximum gas cost in USD to execute liquidation
MAX_GAS_USD=20

# Enable actual transaction execution (false = simulation only)
ENABLE_EXECUTION=false

# Dry run mode (true = no transactions sent, only simulation)
DRY_RUN=true

# Maximum concurrent liquidation transactions
MAX_CONCURRENT_TX=1

# ==============================================
# TARGET ASSETS (HOT-RELOADABLE)
# ==============================================
# Comma-separated list of target debt assets
TARGET_DEBT_ASSETS=USDC

# Comma-separated list of target collateral assets
TARGET_COLLATERAL_ASSETS=WETH,cbETH

# ==============================================
# BINANCE PRICE FEED CONFIGURATION
# ==============================================
# Binance WebSocket URL
BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# Binance trading symbols (comma-separated)
# Format: ASSET1ASSET2 (e.g., ETHUSDT for ETH/USDT)
PRICE_BINANCE_SYMBOLS=ETHUSDT,USDCUSDT

# Mapping of asset symbols to Binance symbols
# Format: ASSET:SYMBOL,ASSET:SYMBOL
BINANCE_SYMBOL_MAP=WETH:ETHUSDT,USDC:USDCUSDT,cbETH:ETHUSDT

# ==============================================
# PYTH NETWORK PRICE FEED CONFIGURATION
# ==============================================
# Pyth Network WebSocket URL
PYTH_WS_URL=wss://hermes.pyth.network/ws

# Pyth Price Feed IDs (comma-separated)
# Get feed IDs from https://pyth.network/developers/price-feed-ids
# ETH/USD: 0xff61491a931112ddf1bd8147cd1b641375f79f5825126d665480874634fd0ace
# USDC/USD: 0xeaa020c61cc479712813461ce153894a96a6c00b21ed0cfc2798d1f9a9e9c94a
PYTH_PRICE_FEED_IDS=0xff61491a931112ddf1bd8147cd1b641375f79f5825126d665480874634fd0ace,0xeaa020c61cc479712813461ce153894a96a6c00b21ed0cfc2798d1f9a9e9c94a

# Mapping of asset symbols to Pyth feed IDs
PYTH_FEED_MAP=WETH:0xff61491a931112ddf1bd8147cd1b641375f79f5825126d665480874634fd0ace,USDC:0xeaa020c61cc479712813461ce153894a96a6c00b21ed0cfc2798d1f9a9e9c94a,cbETH:0xff61491a931112ddf1bd8147cd1b641375f79f5825126d665480874634fd0ace

# ==============================================
# PRIVATE RELAY CONFIGURATION
# ==============================================
# Relay mode: none, flashbots, custom
RELAY_MODE=none

# Private relay URL (for flashbots or custom relay)
PRIVATE_RELAY_URL=

# Flashbots auth header (if using flashbots)
FLASHBOTS_AUTH_HEADER=

# ==============================================
# SIGNER CONFIGURATION
# ==============================================
# Private key for signing transactions (WARNING: Keep secure!)
# Leave empty if DRY_RUN=true
SIGNER_PK=

# Alternative: Path to keystore file (not implemented yet)
SIGNER_KEYSTORE=

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level: error, warn, info, debug, verbose
LOG_LEVEL=info

# Log file path (optional, logs to console if not set)
LOG_FILE=

# ==============================================
# FLASH LIQUIDATOR CONFIGURATION
# ==============================================
# Flash Liquidator contract address (deployed via scripts/deploy.ts)
FLASH_LIQUIDATOR_ADDRESS=

# Swap router address for collateral -> debt conversions
SWAP_ROUTER_ADDRESS=

# ==============================================
# PRICE STALENESS GUARDS
# ==============================================
# Maximum age of price data in milliseconds before considering it stale
PRICE_STALE_MS=5000

# ==============================================
# ADVANCED CONFIGURATION
# ==============================================
# Block polling interval in milliseconds
BLOCK_POLL_INTERVAL=1000

# Price update debounce in milliseconds
PRICE_UPDATE_DEBOUNCE=500

# Event listener confirmation blocks
EVENT_CONFIRMATIONS=0

# Maximum retry attempts for failed transactions
MAX_TX_RETRY=1

# Transaction timeout in seconds
TX_TIMEOUT=60
